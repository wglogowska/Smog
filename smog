       #Sprawdzenie ilosci PM 2,5 w powietrzu
  
def smog(PM):
    if PM>25:
        print('Jeżeli możesz zostań w domu. Zbyt duże zanieczyszczenie w powietrzu')
    else:
        print('Czyste powietrze! Wyjdź na zewnątrz')
        
def function():
    prompt='Wprowadź wartosc parametru PM'
    PM=input(prompt)
    PM=int(PM)
    return PM
     
        
PM=function()
print(PM)
smog(PM)





#Sprawdzenie ilosci PM 2,5 w powietrzu

MAX_PM=25

smog=float(input("Podaj w mg zawartosc PM2.5 w powietrzu: "))

while smog > MAX_PM:
    print('Jeżeli możesz zostań w domu.')
    print('Zbyt duże zanieszczyszenie powietrza.')
smog=float(input("Podaj w mg zawartosc PM2.5 w powietrzu: "))    
   
print('Swieze powietrze')
